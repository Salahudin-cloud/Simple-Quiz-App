<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_NewUser"
    android:background="@color/bg_ACtivity"
    >

    <View
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:background="@color/bg_button"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/fieldView">
     </View>

    <TextView
        android:id="@+id/labelNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User : "
        android:textColor="@color/white"
        android:fontFamily="@font/one_crayon"
        android:textSize="30sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="90dp"
        app:layout_constraintLeft_toLeftOf="@id/fieldView"
        app:layout_constraintTop_toTopOf="@id/fieldView"
        >
    </TextView>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/layoutInputUser"
        app:layout_constraintLeft_toLeftOf="@id/labelNewUser"
        android:fontFamily="@font/one_crayon"
        android:text="Back"
        android:backgroundTint="@color/bg_ACtivity"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        >
    </Button>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintTop_toBottomOf="@id/layoutInputUser"
        app:layout_constraintLeft_toLeftOf="@id/labelNewUser"
        android:fontFamily="@font/one_crayon"
        android:text="Next"
        android:backgroundTint="@color/bg_ACtivity"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="10dp"
        >
    </Button>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutInputUser"
        android:layout_width="300dp"
        android:hint="@null"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        app:boxBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/labelNewUser"
        app:layout_constraintLeft_toLeftOf="@id/labelNewUser"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>





</androidx.constraintlayout.widget.ConstraintLayout>